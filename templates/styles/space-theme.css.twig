:root {
    --primary-color: #e94560;
    --primary-color-hover: #ff6b6b;
    --bg-color: #1a1a2e;
    --card-bg: #16213e;
    --card-header-bg: #1a1a2e;
    --card-border: #0f3460;
    --card-border-hover: #e94560;
    --text-color: #ffffff;
    --text-muted: #8b8b8b;
}

body {
    font-family: 'Orbitron', sans-serif;
    background-color: var(--bg-color);
    color: var(--text-color);
    min-height: 100vh;
    position: relative;
    overflow-x: hidden;
}

/* Stars Background */
.stars {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: -1;
}

/* Planets */
.planet {
    position: fixed;
    border-radius: 50%;
    pointer-events: none;
    z-index: -1;
}

.planet-1 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle at 30% 30%, #4e73df, #2e59d9);
    top: -100px;
    right: -100px;
    opacity: 0.3;
}

.planet-2 {
    width: 200px;
    height: 200px;
    background: radial-gradient(circle at 70% 70%, #6f42c1, #4e73df);
    bottom: -50px;
    left: -50px;
    opacity: 0.2;
}

/* Cards */
.card {
    background-color: var(--card-bg);
    border: 1px solid var(--card-border);
    color: var(--text-color);
    margin-bottom: 1rem;
    transition: border-color 0.2s ease;
}

.card:hover {
    border-color: var(--primary-color);
}

.card-header {
    background-color: var(--card-header-bg);
    border-bottom: 1px solid var(--card-border);
    color: var(--text-color);
}

.card-body {
    background-color: var(--card-bg);
    color: var(--text-color);
}

.card-title {
    color: var(--text-color);
}

.card-text {
    color: var(--text-muted);
}

/* Disable card hover effect for cards containing forms or important buttons */
.card.action-card {
    transform: none !important;
    transition: box-shadow 0.15s ease;
}

.card.action-card:hover {
    border-color: var(--card-border);
}

/* Buttons */
.btn-primary {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.btn-primary:hover {
    background-color: var(--primary-color-hover);
    border-color: var(--primary-color-hover);
}

/* Forms */
.form-control {
    background-color: var(--card-bg);
    border-color: var(--card-border);
    color: var(--text-color);
}

.form-control:focus {
    background-color: var(--card-bg);
    border-color: var(--primary-color);
    color: var(--text-color);
    box-shadow: 0 0 0 0.2rem rgba(233, 69, 96, 0.25);
}

/* Progress Bars */
.progress {
    background-color: var(--card-bg);
}

.progress-bar {
    background-color: var(--primary-color);
}

/* Tooltips */
.tooltip {
    font-family: 'Orbitron', sans-serif;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background: var(--bg-color);
}

::-webkit-scrollbar-thumb {
    background: var(--primary-color);
    border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--primary-color-hover);
}

/* Navbar */
.navbar {
    background-color: var(--card-bg);
    border-bottom: 1px solid var(--card-border);
}

.navbar-brand {
    color: var(--text-color);
    font-weight: 700;
}

.nav-link {
    color: var(--text-color);
}

.nav-link:hover {
    color: var(--primary-color);
}

/* Tables */
.table {
    color: var(--text-color);
}

.table thead th {
    border-bottom-color: var(--card-border);
}

.table td, .table th {
    border-top-color: var(--card-border);
}

/* Alerts */
.alert {
    background-color: var(--card-bg);
    border-color: var(--card-border);
    color: var(--text-color);
}

.alert-warning {
    background-color: rgba(255, 193, 7, 0.1);
    border-color: rgba(255, 193, 7, 0.2);
    color: #ffc107;
}

/* Responsive Design */
@media (max-width: 768px) {
    .planet-1 {
        width: 200px;
        height: 200px;
    }
    
    .planet-2 {
        width: 150px;
        height: 150px;
    }
}
