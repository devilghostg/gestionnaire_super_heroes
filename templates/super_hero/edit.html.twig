{% extends 'base.html.twig' %}

{% block title %}Modifier le SuperHero{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <!-- Titre et description de la page -->
            <div class="col-12 text-center">
                <h1 class="display-4 text-primary">Modifier votre SuperHéros</h1>
                <p class="lead text-light">Rafraîchissez votre super-pouvoir en modifiant les informations de votre héros !</p>
            </div>

            <!-- Formulaire de modification -->
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-primary">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title">Édition du SuperHéros</h3>
                    </div>
                    <div class="card-body">
                        <!-- Inclusion du formulaire avec un label de bouton adapté -->
                        {{ include('super_hero/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    </div>

                    <!-- Bouton retour à la liste -->
                    <div class="card-footer text-center">
                        <a href="{{ path('app_super_hero_index') }}" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left-circle"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulaire de suppression de super-héros -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-8 col-lg-6">
                <div class="card border-danger">
                    <div class="card-body text-center">
                        {{ include('super_hero/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}