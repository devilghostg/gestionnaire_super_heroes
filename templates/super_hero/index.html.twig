{% extends 'base.html.twig' %}

{% block title %}Super Heroes Gallery{% endblock %}

{% block body %}
    <div class="header-section" style="display: flex; justify-content: space-between; align-items: center; margin: 2rem 0;">
        <h1 style="font-size: 2.5rem; font-weight: 700; margin: 0; background: linear-gradient(45deg, var(--primary-color), var(--secondary-color)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            Super Heroes Gallery
        </h1>
        <a href="{{ path('app_super_hero_new') }}" class="btn">
            <i class="fas fa-plus"></i> New Hero
        </a>
    </div>

    <div style="padding: 0 2rem 2rem 2rem;">
        <div class="grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 4rem; row-gap: 4rem; margin-bottom: 2rem; max-width: 1800px; margin-left: auto; margin-right: auto;">
            {% for super_hero in super_heroes %}
                <div style="height: fit-content; padding: 1rem;">
                    <div class="card" style="background: white; border-radius: 15px; padding: 2rem; display: flex; flex-direction: column; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                        <div style="position: relative; margin-bottom: 1.5rem;">
                            <div style="position: absolute; top: 0; right: 0; display: flex; gap: 0.5rem;">
                                {% if super_hero.team %}
                                    <span class="badge" style="background: var(--primary-color); padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.8rem;">
                                        {{ super_hero.team.name }}
                                    </span>
                                {% endif %}
                                <span class="badge" style="background: {{ super_hero.isActive ? '#4CAF50' : '#666' }}; padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.8rem;">
                                    {{ super_hero.isActive ? 'Active' : 'Inactive' }}
                                </span>
                            </div>
                        </div>

                        <h2 style="font-size: 1.8rem; margin: 0.5rem 0 1rem; color: #333;">{{ super_hero.name }}</h2>
                        
                        {% if super_hero.alias %}
                            <p style="color: #666; margin: 0 0 1.5rem; font-size: 1.1rem;">{{ super_hero.alias }}</p>
                        {% endif %}

                        {% if super_hero.power %}
                            <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 10px; margin-bottom: 1.5rem;">
                                <h3 style="color: #333; margin: 0 0 0.5rem; font-size: 1.2rem;">Power</h3>
                                <div style="font-size: 1.1rem; color: #444;">{{ super_hero.power.name }}</div>
                                {% if super_hero.power.description %}
                                    <p style="font-size: 0.9rem; color: #666; margin: 0.5rem 0 0;">
                                        {{ super_hero.power.description }}
                                    </p>
                                {% endif %}
                            </div>
                        {% endif %}

                        <div style="margin-bottom: 1.5rem;">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
                                <strong style="color: #333;">Energy Level</strong>
                                <span>{{ super_hero.energy }}%</span>
                            </div>
                            <div class="progress" style="height: 10px; background: #f0f0f0; border-radius: 5px; overflow: hidden;">
                                <div style="width: {{ super_hero.energy }}%; height: 100%; background: var(--primary-color); transition: width 0.3s ease;"></div>
                            </div>
                        </div>

                        <div class="btn-group" style="display: flex; gap: 1rem; margin-top: auto;">
                            <a href="{{ path('app_super_hero_show', {'id': super_hero.id}) }}" class="btn" style="flex: 1; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}" class="btn btn-secondary" style="flex: 1; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="card" style="background: white; text-align: center; padding: 3rem; border-radius: 15px;">
                    <i class="fas fa-user-astronaut" style="font-size: 4rem; color: var(--primary-color); margin-bottom: 1.5rem;"></i>
                    <p style="margin: 0; font-size: 1.2rem; color: #333;">No heroes found. Be the first to create one!</p>
                    <a href="{{ path('app_super_hero_new') }}" class="btn" style="margin-top: 1.5rem; display: inline-flex; align-items: center; gap: 0.5rem;">
                        <i class="fas fa-plus"></i> Add Hero
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

    <style>
        @media (max-width: 1400px) {
            .grid {
                grid-template-columns: repeat(2, 1fr) !important;
            }
        }
        @media (max-width: 900px) {
            .grid {
                grid-template-columns: 1fr !important;
            }
        }
    </style>
{% endblock %}