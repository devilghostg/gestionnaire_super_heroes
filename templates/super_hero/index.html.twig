{% extends 'base.html.twig' %}

{% block title %}Super Heroes Gallery{% endblock %}

{% block body %}
    <div class="header-section" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; font-weight: 700; margin: 0; background: linear-gradient(45deg, var(--primary-color), var(--secondary-color)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            Super Heroes Gallery
        </h1>
        <a href="{{ path('app_super_hero_new') }}" class="btn">
            <i class="fas fa-plus"></i> New Hero
        </a>
    </div>

    <div class="grid">
        {% for super_hero in super_heroes %}
            <div class="card" style="position: relative; overflow: hidden; transition: transform 0.3s ease, box-shadow 0.3s ease;">
                <div style="position: absolute; top: 1rem; right: 1rem; display: flex; gap: 0.5rem;">
                    {% if super_hero.team %}
                        <span class="badge" style="background: var(--accent-color);">
                            {{ super_hero.team.name }}
                        </span>
                    {% endif %}
                    <span class="badge" style="background: {{ super_hero.isActive ? '#4CAF50' : '#666' }};">
                        {{ super_hero.isActive ? 'Active' : 'Inactive' }}
                    </span>
                </div>

                <h2 style="font-size: 1.5rem; margin: 0 0 1rem;">{{ super_hero.name }}</h2>
                
                {% if super_hero.alias %}
                    <p style="color: #666; margin: 0 0 1rem;">{{ super_hero.alias }}</p>
                {% endif %}

                {% if super_hero.power %}
                    <div style="margin-bottom: 1rem;">
                        <strong>Power:</strong> {{ super_hero.power.name }}
                        {% if super_hero.power.description %}
                            <p style="font-size: 0.9rem; color: #666; margin: 0.5rem 0;">
                                {{ super_hero.power.description }}
                            </p>
                        {% endif %}
                    </div>
                {% endif %}

                <div style="margin-bottom: 1rem;">
                    <strong>Energy Level:</strong>
                    <div class="progress" style="height: 10px; background: rgba(0,0,0,0.1); border-radius: 5px; overflow: hidden; margin-top: 0.5rem;">
                        <div style="width: {{ super_hero.energy }}%; height: 100%; background: var(--primary-color);"></div>
                    </div>
                </div>

                <div class="btn-group" style="margin-top: 1.5rem;">
                    <a href="{{ path('app_super_hero_show', {'id': super_hero.id}) }}" class="btn">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}" class="btn btn-secondary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                </div>
            </div>
        {% else %}
            <div class="card" style="text-align: center; padding: 3rem;">
                <i class="fas fa-user-astronaut" style="font-size: 4rem; color: var(--primary-color); margin-bottom: 1rem;"></i>
                <p style="margin: 0; font-size: 1.2rem;">No heroes found. Be the first to create one!</p>
                <a href="{{ path('app_super_hero_new') }}" class="btn" style="margin-top: 1rem;">
                    <i class="fas fa-plus"></i> Add Hero
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}