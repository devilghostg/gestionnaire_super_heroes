{% extends 'base.html.twig' %}

{% block title %}Détails du Super-Héros{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 superhero-sidebar bg-dark p-4 text-light rounded-lg shadow-lg">
            <h1 class="display-4 text-warning font-weight-bold text-shadow">Détails du Super-Héros</h1>
            <p class="lead text-light">Explorez les détails de ce héros et découvrez ses pouvoirs et ses faiblesses !</p>
        </div>

        <!-- Contenu principal -->
        <div class="col-md-9">
            <!-- Introduction -->
            <div class="superhero-background py-5 rounded-3 shadow-lg mb-4">
                <div class="text-center">
                    <p class="lead text-light font-italic">Voici les informations complètes de ce super-héros !</p>
                </div>
            </div>

            <!-- Détails du super-héros -->
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body">
                    <h5 class="card-title text-primary text-center">Détails de : {{ super_hero.name }}</h5>
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ super_hero.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ super_hero.name }}</td>
                            </tr>
                            <tr>
                                <th>Alias</th>
                                <td>{{ super_hero.alias }}</td>
                            </tr>
                            <tr>
                                <th>Pouvoir</th>
                                <td>{{ super_hero.power.name }}</td>
                            </tr>
                            <tr>
                                <th>Faiblesse</th>
                                <td>{{ super_hero.weakness }}</td>
                            </tr>
                            <tr>
                                <th>Statut</th>
                                <td>
                                    {% if super_hero.isActive %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Équipes</th>
                                <td>
                                    {% if super_hero.teams|length > 0 %}
                                        <ul class="list-unstyled">
                                            {% for team in super_hero.teams %}
                                                <li><i class="bi bi-shield-fill text-primary"></i> {{ team.name }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% else %}
                                        <span class="text-muted">Aucune équipe assignée</span>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Actions -->
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_super_hero_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Retour à la liste
                        </a>
                        <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                    </div>
                </div>
            </div>

            <!-- Formulaire de suppression -->
            <div class="card mt-4 border-0 shadow-lg">
                <div class="card-body text-center">
                    <p class="text-danger font-weight-bold">Attention : Cette action est irréversible.</p>
                    {{ include('super_hero/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}