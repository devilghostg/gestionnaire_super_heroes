{% extends 'base.html.twig' %}

{% block title %}Détails du Super-héros{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #model3dContainer {
            width: 100%;
            height: 400px;
            background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
            border-radius: 10px;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three@0.128.0/examples/js/controls/OrbitControls.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three@0.128.0/examples/js/loaders/GLTFLoader.js"></script>
    <script src="{{ asset('js/hero3d.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            {% if super_hero.model3dPath %}
                console.log('Initializing 3D viewer with model:', '{{ asset(super_hero.model3dPath) }}');
                new Hero3DViewer('model3dContainer', '{{ asset(super_hero.model3dPath) }}');
            {% endif %}
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h1>{{ super_hero.name }}</h1>
            </div>
            <div class="card-body">
                {% if super_hero.model3dPath %}
                    <div id="model3dContainer"></div>
                {% endif %}
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ super_hero.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ super_hero.name }}</td>
                        </tr>
                        <tr>
                            <th>Alias</th>
                            <td>{{ super_hero.alias }}</td>
                        </tr>
                        <tr>
                            <th>Pouvoir</th>
                            <td>
                                {% if super_hero.power %}
                                    {{ super_hero.power.name }}
                                {% else %}
                                    <span class="text-muted">Aucun pouvoir assigné</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Faiblesse</th>
                            <td>{{ super_hero.weakness }}</td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>
                                {% if super_hero.isActive %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Énergie</th>
                            <td>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar {% if super_hero.energy < 30 %}bg-danger{% elseif super_hero.energy < 70 %}bg-warning{% else %}bg-success{% endif %}" 
                                         role="progressbar" 
                                         style="width: {{ super_hero.energy }}%;" 
                                         aria-valuenow="{{ super_hero.energy }}" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        {{ super_hero.energy }}%
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th>Équipe</th>
                            <td>
                                {% if super_hero.team %}
                                    <a href="{{ path('app_team_show', {'id': super_hero.team.id}) }}">
                                        {{ super_hero.team.name }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">Aucune équipe assignée</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-4">
                    <a href="{{ path('app_super_hero_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>

                    <a href="{{ path('app_super_hero_edit', {'id': super_hero.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>

                    {{ include('super_hero/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}