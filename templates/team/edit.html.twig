{% extends 'base.html.twig' %}

{% block title %}Modifier l'équipe{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/team.css') }}?v={{ random() }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="action-card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h1>Modifier l'équipe</h1>
                    <a href="{{ path('app_team_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>

            <div class="card-body">
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.description) }}
                        {{ form_widget(form.description) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="hero-selection-container">
                        <h2 class="hero-selection-title">Sélectionner les super-héros</h2>
                        <div class="hero-grid">
                            {% for hero in form.superHeroes %}
                                {% set heroData = hero.vars.label|split('|||') %}
                                <div class="hero-check">
                                    {{ form_widget(hero) }}
                                    <div class="hero-info">
                                        <span class="hero-name">{{ heroData[0] }}</span>
                                        <span class="hero-powers">{{ heroData[1] }}</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.superHeroes) }}
                    </div>

                    <div class="button-container">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
