{% extends 'base.html.twig' %}

{% block title %}{{ button_label|default('Créer') }} une équipe{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow">
            <div class="card-header">
                <h1 class="mb-0">{{ button_label|default('Créer') }} une équipe</h1>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
                    <h4>{{ form_label(form.superHeroes) }}</h4>
                    <div class="row">
                        {% for hero in form.superHeroes %}
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    {{ form_widget(hero) }}
                                    {{ form_label(hero) }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {{ form_errors(form.superHeroes) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_team_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> {{ button_label|default('Créer') }}
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}