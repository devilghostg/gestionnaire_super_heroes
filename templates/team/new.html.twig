{% extends 'base.html.twig' %}

{% block title %}Créer un Super-Héros{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ button_label == 'Create' ? 'Créer' : 'Modifier' }} un Super-Héros</h1>

        {{ form_start(form) }}
            <div class="card mb-4">
                <div class="card-body">
                    {{ form_widget(form) }}
                </div>
            </div>
            <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
        {{ form_end(form) }}

        <div class="mt-3">
            <a href="{{ path('app_super_hero_index') }}" class="btn btn-primary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}