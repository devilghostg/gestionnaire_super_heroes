{% extends 'base.html.twig' %}

{% block title %}Teams{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center text-light">Les équipes</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-end gap-2 mb-4">
            <form action="{{ path('app_team_generate_random') }}" method="post" class="d-inline">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-dice-5"></i> Générer une équipe aléatoire
                </button>
            </form>
            <a href="{{ path('app_team_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Créer une nouvelle équipe
            </a>
        </div>

        <!-- Liste des équipes -->
        <div class="row mt-4 mx-2">
            {% for team in teams %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body">
                            <h5 class="card-title">{{ team.name }}</h5>
                            <p class="card-text">{{ team.description }}</p>
                            <h6>Super-héros :</h6>
                            <ul class="list-unstyled">
                                {% for super_hero in team.superHeroes %}
                                    <li><i class="bi bi-person-fill text-primary"></i> {{ super_hero.name }}</li>
                                {% else %}
                                    <li class="text-muted">Aucun super-héros dans cette équipe</li>
                                {% endfor %}
                            </ul>

                            <div class="d-flex justify-content-between mt-3">
                                <a href="{{ path('app_team_show', {'id': team.id}) }}" class="btn btn-info">
                                    <i class="bi bi-eye"></i> Voir détails
                                </a>
                                <div>
                                    <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-warning">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    
                                    <form method="post" action="{{ path('app_team_delete', {'id': team.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette équipe ?');" style="display: inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
                                        <button class="btn btn-danger">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <p class="text-light">Aucune équipe trouvée.</p>
                </div>
            {% endfor %}
        </div>

        <!-- Bouton vers la page d'accueil des super-héros -->
        <div class="text-center mt-4">
            <a href="{{ path('app_super_hero_index') }}" class="btn btn-secondary">
                <i class="bi bi-house-door-fill"></i> Retour aux Super-héros
            </a>
        </div>
    </div>
{% endblock %}