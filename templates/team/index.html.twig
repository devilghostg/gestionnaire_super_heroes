{% extends 'base.html.twig' %}

{% block title %}Teams Gallery{% endblock %}

{% block body %}
    <div class="header-section" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; font-weight: 700; margin: 0; background: linear-gradient(45deg, var(--primary-color), var(--secondary-color)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            Teams Gallery
        </h1>
        <a href="{{ path('app_team_new') }}" class="btn">
            <i class="fas fa-plus"></i> New Team
        </a>
    </div>

    <div class="grid">
        {% for team in teams %}
            <div class="card" style="position: relative; transition: transform 0.3s ease, box-shadow 0.3s ease;">
                <h2 style="font-size: 1.5rem; margin: 0 0 1rem;">{{ team.name }}</h2>
                
                {% if team.description %}
                    <p style="color: #666; margin: 0 0 1.5rem;">{{ team.description }}</p>
                {% endif %}

                <div style="margin-bottom: 1.5rem;">
                    <strong>Members ({{ team.superHeroes|length }}):</strong>
                    {% if team.superHeroes|length > 0 %}
                        <div style="display: flex; flex-wrap: wrap; gap: 0.5rem; margin-top: 0.5rem;">
                            {% for hero in team.superHeroes %}
                                <span class="badge" style="background: var(--primary-color);">
                                    {{ hero.name }}
                                </span>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p style="color: #666; margin: 0.5rem 0 0;">No members yet</p>
                    {% endif %}
                </div>

                <div class="btn-group">
                    <a href="{{ path('app_team_show', {'id': team.id}) }}" class="btn">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-secondary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form method="post" action="{{ path('app_team_delete', {'id': team.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette équipe ?');" style="display: inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        {% else %}
            <div class="card" style="text-align: center; padding: 3rem;">
                <i class="fas fa-users" style="font-size: 4rem; color: var(--primary-color); margin-bottom: 1rem;"></i>
                <p style="margin: 0; font-size: 1.2rem;">No teams found. Create your first team!</p>
                <a href="{{ path('app_team_new') }}" class="btn" style="margin-top: 1rem;">
                    <i class="fas fa-plus"></i> Add Team
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}