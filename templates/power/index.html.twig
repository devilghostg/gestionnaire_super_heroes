{% extends 'base.html.twig' %}

{% block title %}Liste des pouvoirs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h1 class="h4 mb-0">Liste des pouvoirs</h1>
                    </div>
                    <div class="card-body">
                        {% if powers is not empty %}
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for power in powers %}
                                        <tr>
                                            <td>{{ power.name }}</td>
                                            <td>
                                                <a href="{{ path('power_show', {'id': power.id}) }}" class="btn btn-info btn-sm">
                                                    Détails
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        {% else %}
                            <p class="text-muted">Aucun pouvoir n'a été trouvé.</p>
                        {% endif %}
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_super_hero_index') }}" class="btn btn-secondary">
                            <i class="bi bi-house-fill"></i> Retour à l'accueil
                        </a>
                        <a href="{{ path('power_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle-fill"></i> Créer un nouveau pouvoir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}