{% extends 'base.html.twig' %}

{% block title %}Mission: {{ mission.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h1 class="mb-0">{{ mission.title }}</h1>
                <div>
                    {% for i in 1..mission.difficulty %}
                        <i class="bi bi-star-fill text-warning"></i>
                    {% endfor %}
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h5>Description</h5>
                        <p class="card-text">{{ mission.description }}</p>

                        <h5>Pouvoirs requis</h5>
                        <ul class="list-unstyled">
                            {% for power in mission.requiredPowers %}
                                <li><i class="bi bi-lightning-charge-fill text-warning"></i> {{ power.name }}</li>
                            {% else %}
                                <li class="text-muted">Aucun pouvoir spécifique requis</li>
                            {% endfor %}
                        </ul>

                        <h5>Limite de temps</h5>
                        <p>{{ mission.timeLimit }} secondes</p>

                        {% if mission.status == 'completed' %}
                            <div class="alert alert-success">
                                <h5>Mission accomplie !</h5>
                                <p>{{ mission.result }}</p>
                                <hr>
                                <div class="row">
                                    <div class="col">
                                        <strong>Score :</strong> {{ mission.score }}
                                    </div>
                                    <div class="col">
                                        <strong>Temps pris :</strong> 
                                        {{ mission.completedAt.diff(mission.startedAt).format('%H:%I:%S') }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>

                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Statut</h5>
                            </div>
                            <div class="card-body">
                                {% if mission.status == 'pending' %}
                                    <span class="badge bg-info">En attente</span>
                                {% elseif mission.status == 'in_progress' %}
                                    <span class="badge bg-warning">En cours</span>
                                {% else %}
                                    <span class="badge bg-success">Terminée</span>
                                {% endif %}

                                {% if mission.superHero %}
                                    <h6 class="mt-3">Héros assigné</h6>
                                    <p>{{ mission.superHero.name }}</p>
                                    
                                    {% if mission.status == 'pending' %}
                                        <form action="{{ path('app_mission_progress', {'id': mission.id}) }}" method="get" class="mt-3">
                                            <button type="submit" class="btn btn-success w-100">
                                                <i class="bi bi-play-fill"></i> Commencer la mission
                                            </button>
                                        </form>
                                    {% endif %}
                                {% endif %}

                                {% if mission.status == 'pending' and not mission.superHero %}
                                    <h6 class="mt-3">Assigner un héros</h6>
                                    <form method="post" id="assignForm">
                                        <input type="hidden" name="_token" value="{{ csrf_token('assign' ~ mission.id) }}">
                                        <select class="form-select mb-2" id="heroSelect" name="heroId">
                                            <option value="">Choisir un héros</option>
                                            {% for hero in available_heroes %}
                                                <option value="{{ hero.id }}">{{ hero.name }}</option>
                                            {% endfor %}
                                        </select>
                                        <button type="submit" class="btn btn-primary" id="assignButton" disabled>
                                            Assigner
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_mission_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const heroSelect = document.getElementById('heroSelect');
    const assignButton = document.getElementById('assignButton');
    const assignForm = document.getElementById('assignForm');

    if (heroSelect && assignButton && assignForm) {
        // Met à jour l'action du formulaire et active/désactive le bouton
        heroSelect.addEventListener('change', function() {
            const heroId = this.value;
            if (heroId) {
                assignForm.action = "{{ path('app_mission_assign', {'id': mission.id, 'heroId': '__hero_id__'}) }}".replace('__hero_id__', heroId);
                assignButton.disabled = false;
            } else {
                assignButton.disabled = true;
            }
        });
    }
});
</script>
{% endblock %}
