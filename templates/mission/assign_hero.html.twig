{% extends 'base.html.twig' %}

{% block title %}Assigner un héros{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">Assigner un héros à la mission : {{ mission.title }}</h1>
            </div>
            <div class="card-body">
                {% if available_heroes|length > 0 %}
                    <div class="row">
                        {% for hero in available_heroes %}
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ hero.name }}</h5>
                                        <p class="card-text">
                                            <strong>Énergie :</strong> {{ hero.energy }}%<br>
                                            <strong>Pouvoir :</strong> {{ hero.power ? hero.power.name : 'Aucun' }}
                                        </p>
                                        <form method="post" action="{{ path('app_mission_assign_hero_post', {'id': mission.id, 'heroId': hero.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('assign_hero' ~ mission.id) }}">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-user-plus"></i> Sélectionner
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Aucun héros n'est disponible pour le moment.
                    </div>
                {% endif %}

                <div class="mt-3">
                    <a href="{{ path('app_mission_show', {'id': mission.id}) }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la mission
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
