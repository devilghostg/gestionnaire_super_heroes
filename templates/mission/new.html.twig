{% extends 'base.html.twig' %}

{% block title %}Nouvelle mission{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card action-card">
            <div class="card-header">
                <h1 class="mb-0">{% if mission is defined and mission.id %}Modifier la mission{% else %}Créer une nouvelle mission{% endif %}</h1>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.title) }}
                            {{ form_row(form.description) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.difficulty) }}
                            {{ form_row(form.timeLimit) }}
                            {{ form_row(form.requiredPowers) }}
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <a href="{{ path('app_mission_index') }}" class="btn btn-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> {{ mission is defined and mission.id ? 'Mettre à jour' : 'Créer' }}
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
