{% extends 'base.html.twig' %}

{% block title %}Liste des Missions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/mission.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        {% if missions is empty %}
            <div class="empty-state">
                <h2 class="empty-title">Aucune mission trouvée. Créez votre première mission !</h2>
                <a href="{{ path('app_mission_new') }}" class="add-mission-btn">Ajouter une Mission</a>
            </div>
        {% else %}
            <h1 class="page-title">Liste des Missions</h1>
            
            <div class="grid">
                {% for mission in missions %}
                    <div class="card">
                        <div class="card-content">
                            <div class="mission-status-badge">
                                {% set statusLabel = {
                                    'pending': 'En attente',
                                    'in_progress': 'En cours',
                                    'completed': 'Terminée',
                                    'failed': 'Échouée',
                                    'cancelled': 'Annulée'
                                } %}
                                {% set statusIcon = {
                                    'pending': 'bi-clock',
                                    'in_progress': 'bi-play-circle',
                                    'completed': 'bi-check-circle',
                                    'failed': 'bi-x-circle',
                                    'cancelled': 'bi-dash-circle'
                                } %}
                                <span class="status-badge {{ mission.status }}">
                                    <i class="bi {{ statusIcon[mission.status] }}"></i>
                                    {{ statusLabel[mission.status] }}
                                </span>
                            </div>
                            
                            <h2 class="mission-card-title">{{ mission.title }}</h2>
                            
                            {% if mission.description %}
                                <p class="mission-card-description">{{ mission.description }}</p>
                            {% endif %}
                            
                            <div class="mission-info-section">
                                <div class="mission-heroes">
                                    <strong>Héros assignés:</strong>
                                    {% if mission.superHero %}
                                        <div class="heroes-list">
                                            <div class="hero-card">
                                                <div class="hero-info">
                                                    <span class="hero-name">{{ mission.superHero.name }}</span>
                                                    <div class="hero-stats">
                                                        <div class="energy-bar">
                                                            <span class="label">Énergie:</span>
                                                            <div class="progress">
                                                                <div class="progress-bar" 
                                                                     role="progressbar" 
                                                                     style="width: {{ mission.superHero.energy }}%"
                                                                     aria-valuenow="{{ mission.superHero.energy }}" 
                                                                     aria-valuemin="0" 
                                                                     aria-valuemax="100">
                                                                    {{ mission.superHero.energy }}%
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="hero-powers">
                                                            <span class="label">Pouvoirs:</span>
                                                            <div class="powers-list">
                                                                {% for power in mission.superHero.powers %}
                                                                    <span class="power-badge">{{ power.name }}</span>
                                                                {% endfor %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <p class="no-heroes">Aucun héros assigné pour le moment</p>
                                    {% endif %}
                                </div>
                                
                                {% if mission.startedAt %}
                                    <div class="mission-dates">
                                        <strong>Date de début:</strong>
                                        <span>{{ mission.startedAt|date('Y-m-d H:i') }}</span>
                                    </div>
                                {% endif %}
                                
                                {% if mission.completedAt %}
                                    <div class="mission-dates">
                                        <strong>Date de fin:</strong>
                                        <span>{{ mission.completedAt|date('Y-m-d H:i') }}</span>
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="card-actions">
                            <a href="{{ path('app_mission_show', {'id': mission.id}) }}" class="mission-btn view">
                                <i class="bi bi-eye"></i>
                                Voir
                            </a>
                            {% if mission.status == 'pending' %}
                                <a href="{{ path('app_mission_edit', {'id': mission.id}) }}" class="mission-btn edit">
                                    <i class="bi bi-pencil"></i>
                                    Éditer
                                </a>
                            {% endif %}
                            <div class="mission-actions">
                                {% if mission.status == 'pending' %}
                                    {% if mission.superHero %}
                                        <a href="{{ path('app_mission_start', {'id': mission.id}) }}" class="btn btn-primary">
                                            <i class="bi bi-play-fill"></i> Lancer la mission
                                        </a>
                                    {% endif %}
                                {% elseif mission.status == 'in_progress' %}
                                    <a href="{{ path('app_mission_progress', {'id': mission.id}) }}" class="btn btn-info">
                                        <i class="bi bi-eye"></i> Voir la mission
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="actions mt-4">
                <a href="{{ path('app_mission_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    Créer une nouvelle mission
                </a>
                <a href="{{ path('app_mission_history') }}" class="btn btn-secondary">
                    <i class="bi bi-clock-history"></i>
                    Historique
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
