{% extends 'base.html.twig' %}

{% block title %}Missions Gallery{% endblock %}

{% block body %}
    <div class="header-section" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
        <h1 style="font-size: 2.5rem; font-weight: 700; margin: 0; background: linear-gradient(45deg, var(--primary-color), var(--secondary-color)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            Missions Gallery
        </h1>
        <div style="display: flex; gap: 1rem;">
            <a href="{{ path('app_mission_history') }}" class="btn btn-secondary">
                <i class="fas fa-history"></i> History
            </a>
            <a href="{{ path('app_mission_new') }}" class="btn">
                <i class="fas fa-plus"></i> New Mission
            </a>
        </div>
    </div>

    <div class="grid">
        {% for mission in missions %}
            <div class="card">
                <div class="card-body">
                    <div style="position: absolute; top: 1rem; right: 1rem;">
                        <span class="badge {% if mission.status == 'completed' %}badge-success{% elseif mission.status == 'in_progress' %}badge-warning{% else %}badge-secondary{% endif %}">
                            {{ mission.status|title|replace({'_': ' '}) }}
                        </span>
                    </div>

                    <h2 style="font-size: 1.5rem; margin: 0 0 1rem;">{{ mission.title }}</h2>
                    
                    {% if mission.description %}
                        <p style="color: #666; margin: 0 0 1.5rem;">{{ mission.description }}</p>
                    {% endif %}

                    <div style="margin-bottom: 1.5rem;">
                        <strong>Assigned Heroes:</strong>
                        {% if mission.superHero %}
                            <div style="display: flex; flex-wrap: wrap; gap: 0.5rem; margin-top: 0.5rem;">
                                <span class="badge badge-info">
                                    {{ mission.superHero.name }}
                                </span>
                            </div>
                        {% else %}
                            <p style="color: #666; margin: 0.5rem 0 0;">No heroes assigned yet</p>
                        {% endif %}
                    </div>

                    {% if mission.startedAt %}
                        <div style="margin-bottom: 1rem;">
                            <strong>Start Date:</strong>
                            <span style="color: #666;">{{ mission.startedAt|date('Y-m-d H:i') }}</span>
                        </div>
                    {% endif %}

                    {% if mission.completedAt %}
                        <div style="margin-bottom: 1.5rem;">
                            <strong>End Date:</strong>
                            <span style="color: #666;">{{ mission.completedAt|date('Y-m-d H:i') }}</span>
                        </div>
                    {% endif %}
                </div>

                <div class="card-footer">
                    <div class="btn-group">
                        <a href="{{ path('app_mission_show', {'id': mission.id}) }}" class="btn">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <a href="{{ path('app_mission_edit', {'id': mission.id}) }}" class="btn btn-secondary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        {% if mission.status != 'completed' %}
                            <a href="{{ path('app_mission_progress', {'id': mission.id}) }}" class="btn" style="background: #FF9800;">
                                <i class="fas fa-tasks"></i> Progress
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-body" style="text-align: center; padding: 3rem;">
                    <i class="fas fa-clipboard-list" style="font-size: 4rem; color: var(--primary-color); margin-bottom: 1rem;"></i>
                    <p style="margin: 0; font-size: 1.2rem;">No missions found. Create your first mission!</p>
                    <a href="{{ path('app_mission_new') }}" class="btn" style="margin-top: 1rem;">
                        <i class="fas fa-plus"></i> Add Mission
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
