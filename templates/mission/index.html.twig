{% extends 'base.html.twig' %}

{% block title %}Missions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .timer {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            margin-left: 0.5rem;
            border-radius: 0.25rem;
            background-color: #f8f9fa;
            font-size: 0.875rem;
            font-weight: bold;
        }
        .timer.urgent {
            color: #dc3545;
            animation: blink 1s infinite;
        }
        @keyframes blink {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Missions</h1>
            <div>
                <form method="post" action="{{ path('app_mission_generate_random') }}" class="d-inline me-2">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-shuffle"></i> Mission aléatoire
                    </button>
                </form>
                <a href="{{ path('app_super_hero_index') }}" class="btn btn-secondary me-2">
                    <i class="bi bi-house"></i> Accueil
                </a>
                <a href="{{ path('app_mission_history') }}" class="btn btn-info me-2">
                    <i class="bi bi-clock-history"></i> Historique
                </a>
                <a href="{{ path('app_mission_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouvelle mission
                </a>
            </div>
        </div>

        <div class="row">
            {% for mission in missions %}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">{{ mission.title }}</h5>
                            <div>
                                {% for i in 1..5 %}
                                    {% if i <= mission.difficulty %}
                                        <i class="bi bi-star-fill text-warning"></i>
                                    {% else %}
                                        <i class="bi bi-star text-warning"></i>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ mission.description }}</p>
                            <p>
                                <strong>Statut :</strong>
                                {% if mission.status == 'completed' %}
                                    <span class="badge bg-success">Terminée</span>
                                {% elseif mission.status == 'cancelled' %}
                                    <span class="badge bg-danger">Annulée</span>
                                {% elseif mission.status == 'in_progress' %}
                                    <span class="badge bg-warning">En cours</span>
                                {% else %}
                                    <span class="badge bg-secondary">En attente</span>
                                {% endif %}
                            </p>

                            {% if mission.superHero %}
                                <p>
                                    <strong>Héros assigné :</strong>
                                    {{ mission.superHero.name }}
                                    (Énergie : {{ mission.superHero.energy }}%)
                                </p>
                            {% else %}
                                <p class="text-muted">Aucun héros assigné</p>
                            {% endif %}
                        </div>
                        <div class="card-footer">
                            <div class="d-flex gap-2">
                                <a href="{{ path('app_mission_show', {'id': mission.id}) }}" class="btn btn-info">
                                    <i class="bi bi-eye"></i> Détails
                                </a>

                                {% if mission.status == 'pending' %}
                                    {% if not mission.superHero %}
                                        <a href="{{ path('app_mission_assign_hero', {'id': mission.id}) }}" class="btn btn-primary">
                                            <i class="bi bi-person-plus"></i> Assigner un héros
                                        </a>
                                    {% else %}
                                        <form method="post" action="{{ path('app_mission_start', {'id': mission.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('start' ~ mission.id) }}">
                                            <button class="btn btn-success">
                                                <i class="bi bi-play-fill"></i> Démarrer
                                            </button>
                                        </form>
                                    {% endif %}
                                {% endif %}

                                {% if mission.status == 'in_progress' %}
                                    <a href="{{ path('app_mission_progress', {'id': mission.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="bi bi-play-fill"></i> Continuer
                                    </a>
                                {% endif %}

                                {% if mission.status != 'completed' or mission.status == 'cancelled' %}
                                    <form method="post" action="{{ path('app_mission_delete', {'id': mission.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette mission ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mission.id) }}">
                                        <button class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <div class="alert alert-info">
                        Aucune mission n'a été créée pour le moment.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
