{% extends 'base.html.twig' %}

{% block title %}Missions{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Missions</h1>
            <div>
                <a href="{{ path('app_super_hero_index') }}" class="btn btn-secondary me-2">
                    <i class="bi bi-house"></i> Accueil
                </a>
                <a href="{{ path('app_mission_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouvelle mission
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <h2>Missions en cours</h2>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Difficulté</th>
                                <th>Statut</th>
                                <th>Héros assigné</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for mission in missions %}
                            {% if mission.status != 'completed' %}
                                <tr>
                                    <td>{{ mission.title }}</td>
                                    <td>
                                        {% for i in 1..mission.difficulty %}
                                            <i class="bi bi-star-fill text-warning"></i>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% if mission.status == 'pending' %}
                                            <span class="badge bg-info">En attente</span>
                                        {% elseif mission.status == 'in_progress' %}
                                            <span class="badge bg-warning">En cours</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if mission.superHero %}
                                            {{ mission.superHero.name }}
                                        {% else %}
                                            <span class="text-muted">Non assigné</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_mission_show', {'id': mission.id}) }}" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-4">
                <h2>Tableau des scores</h2>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Mission</th>
                                <th>Héros</th>
                                <th>Score</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for mission in completed_missions %}
                            <tr>
                                <td>{{ mission.title }}</td>
                                <td>{{ mission.superHero.name }}</td>
                                <td class="text-end">{{ mission.score }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
