<form method="post" action="{{ path('mission_remove', {'id': mission.id}) }}" onsubmit="return confirm('Are you sure you want to delete this mission?');" style="width: 100%;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mission.id) }}">
    <button class="btn btn-danger" style="width: 100%;">
        <i class="fas fa-trash"></i> Delete Mission
    </button>
</form>
